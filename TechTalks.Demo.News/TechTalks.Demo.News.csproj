      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="5.0.0-rc4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TechTalks.Demo.News.Domain\TechTalks.Demo.News.Domain.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\Protos\press.proto" GrpcServices="Server">
      <Link>Protos\press.proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
